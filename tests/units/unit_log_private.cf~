
body common control
{
bundlesequence => { "test" };
}

bundle agent test
{
vars:

  "software" slist => { "/etc/passwd", "/etc/group" };

files:

  "$(software)"

    create => "true",
     action => logme("$(software)");

}


body action logme(x)
{
log_destination => "/tmp/private_log.log";
log_string => "$(sys.date) $(x) fulfilled the promise";
}